{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*", "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}